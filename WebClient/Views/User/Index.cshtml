@model WebClient.ViewModels.UserManagment.UserListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    @Html.Partial("~/Views/Shared/Partials/_Filter.cshtml", Model.Filter)
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<div>
    @Html.Partial("~/Views/Shared/Partials/_Paging.cshtml", Model.Pager)
</div>
